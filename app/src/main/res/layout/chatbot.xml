<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainContent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">

        <TextView
            android:id="@+id/test_response1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/activity_vertical_margin">

        </TextView>


        <TextView
            android:id="@+id/test_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/test_response1"
            android:layout_margin="@dimen/activity_vertical_margin">

        </TextView>


        <TextView
            android:id="@+id/test_response2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/test_input1"
            android:layout_margin="@dimen/activity_vertical_margin">


        </TextView>


        <TextView
            android:id="@+id/test_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/test_response2"

            android:layout_margin="@dimen/activity_vertical_margin">


        </TextView>


        <TextView
            android:id="@+id/test_response3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/test_input2"

            android:layout_margin="@dimen/activity_vertical_margin">


        </TextView>

        <TextView
            android:id="@+id/test_input3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/test_response3"

            android:layout_margin="@dimen/activity_vertical_margin">


        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/text_margin"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/user_input_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:inputType="text"></EditText>

        <Button
            android:id="@+id/enter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter">

        </Button>

    </LinearLayout>
</FrameLayout>